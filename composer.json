{
    "name": "vincenzoraco/recurrence",
    "description": "An agnostic RRule PHP helper to manage recurrences",
    "keywords": [
        "vincenzoraco",
        "recurrence"
    ],
    "homepage": "https://github.com/vincenzoraco/recurrence",
    "license": "MIT",
    "authors": [
        {
            "name": "Vincenzo Raco",
            "email": "vincenzoraco@users.noreply.github.com",
            "homepage": "https://vincenzoraco.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "nesbot/carbon": "^2.37",
        "rlanvin/php-rrule": "^2.2",
        "tightenco/collect": "^7.19"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "pestphp/pest": "^0.2.4",
        "phpunit/phpunit": "9.2",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "VincenzoRaco\\Recurrence\\": "src",
            "VincenzoRaco\\Recurrences\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VincenzoRaco\\Recurrence\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "./vendor/bin/pest",
        "test-coverage": "./vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
